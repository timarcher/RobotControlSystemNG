<android.support.v4.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diagnostics_activity_main_pane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DiagnosticsActivity">

    <FrameLayout
        android:id="@+id/diagnostics_activity_sliding_menu_pane"
        android:name=".activities.diagnostics.SlidingMenuFragment"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#555" />

    <FrameLayout
        android:id="@+id/diagnostics_activity_content_pane"
        android:layout_width="400dp"
        android:name=".activities.diagnostics.SonarFragment"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:background="#FFF"
        android:layout_marginLeft="20dp" />

    <!--         android:name="com.timarcher.robotcontrolsystem.activities.diagnostics.SlidingMenuFragment"
        android:layout_gravity="left"

     -->
</android.support.v4.widget.SlidingPaneLayout>


